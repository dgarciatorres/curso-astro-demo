---
import { options } from "@astrojs/check/dist/options"
import { type APISpaceXRespose} from   '../type/api'
import CardLaunch from "../components/CardLaunch.astro"

    // se piuede ejecutar el js que queramos

    const res = await fetch("https://api.spacexdata.com/v5/launches/query", {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({
            options: {
                limit: 12,
            },
        }),
    })

    // const data = JSON.stringify(await res.json())
    const {docs : launches}  = (await res.json()) as APISpaceXRespose

---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
{
    launches.map(({id, links, details, flight_number: flightNumber, success})=> (
        <CardLaunch 
            id={id}
            img={links.patch.small}
            details={details}
            flightNumber={flightNumber}
            success={success}
        />
    ))
}
</div>